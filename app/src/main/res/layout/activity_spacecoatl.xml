<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spacecoatl.app.Spacecoatl"
    android:baselineAligned="false"

    android:background="@drawable/swept01"

    >

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:id="@+id/dashboard"
        class="com.example.spacecoatl.app.Dashboard"
       />

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight=".7"
    android:paddingTop="10dp"
    >
        <!--android:layout_weight=".7"-->
        <!--android:layout_width="0dp"-->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"

            android:id="@+id/activities"
            class="com.example.spacecoatl.app.Card"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="F1"
                android:id="@+id/actionF1"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="F2"
                android:id="@+id/actionF2"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="F3"
                android:id="@+id/actionF3"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="F1"
                android:id="@+id/actionF4"
                />
            </LinearLayout>



    </LinearLayout>





</LinearLayout>
